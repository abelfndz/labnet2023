@model IEnumerable<Lab.Net.EF.MVC.Models.ProveedorView>
@{
    ViewBag.Title = "Proveedores Page";
}

<head>
    <link href="~/Views/Estilos/style.css" rel="stylesheet" />
</head>

<h1>Listado de Proveedores</h1>



<div class="container">
    <form method="get" action="@Url.Action("Index", "Proveedores")">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    @Html.TextBox("cadenaBuscar", null, new { @class = "form-control", placeholder = "Buscar" })
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Buscar</button>
                </div>
            </div>
        </div>
    </form>
    <div class="col-md-6 text-end">
        @Html.ActionLink("Insertar Proveedores", "InsertarModificar",
       "Proveedores", new { @class = "btn btn-outline-secondary" })
    </div>
</div>



<table class="table table-dark" style="margin-top:10px">
    <thead>

        <tr>

            <th scope="col">Nombre de la Compania</th>
            <th scope="col">Ciudad</th>
            <th scope="col">Eliminar</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proveedores in Model)
        {
            <tr>

                <th scope="row">@proveedores.NombreCompania</th>
                <td>@proveedores.Ciudad</td>
                <td>@Html.ActionLink("Eliminar", "Eliminar", new { id = proveedores.Id }, new { onclick = "return confirm('Esta seguro que desea Eliminar?')" })</td>
                <td>@Html.ActionLink("Modificar", "InsertarModificar", new { id = proveedores.Id })</td>
            </tr>
        }
    </tbody>
</table>
